<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


  <t t-name="PaymentScreenPaymentMetod2" t-inherit="point_of_sale.PaymentMethodButton" t-inherit-mode="extension" owl="1">
      <xpath expr="//div[hasclass('payment-name')]" position="before">

        <t t-if="env.pos.config.allow_payment_icon" >
          <t t-if="props.paymentMethod.icon" >
            <img class="pos-payment-icon" t-att-src="props.paymentMethod.icon" alt="Icon" style="width: 50px; height: 50px; margin-top: 12px;"/>
          </t>
        </t>

      </xpath>
  </t>
</templates>

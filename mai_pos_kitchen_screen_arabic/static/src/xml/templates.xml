    </t>

<!-- add KitchenReceipt in receipt -->
    <t t-name="KitchenReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-container')]" position="inside">
          <t t-if="!env.pos.config.hide_kitchen_receipt">
            <KitchenReceipt order="currentOrder" t-ref="kitchen-receipt" />
          </t>
        </xpath>

    </t>

    <t t-name="KitchenReceipt" owl="1">
      <div class="pos-receipt">
        <div class="pos-receipt-contact">
              <br/>
              <br/>
              <t t-if="env.pos.company.name_arabic">
                  <div style="font-size:18pt;font-weight:bold">
                      <span t-esc="env.pos.company.name_arabic" style="text-size:12pt"/>
                      <br/>
                  </div>
              </t>

              <table style="border-bottom:1pt dashed black;margin-top:-20pt;padding:5pt;font-size:9pt; font-weight:bold;">
                  <colgroup>
                      <col width='24%'/>
                      <col width='1%'/>
                      <col width='49%'/>
                      <col width='1%'/>
                      <col width='25%'/>
                  </colgroup>
                  <tr>
                      <td style="vertical-align:bottom; font-weight:bold;">
                          Invoice No
                      </td>
                      <td style="vertical-align:bottom;padding-left:3pt; font-weight:bold;">:</td>
                      <td style="text-align:center;vertical-align:bottom;padding-right:5pt; font-weight:bold;">

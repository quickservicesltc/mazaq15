<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="SelectionComboOrderMenuList" owl="1">
        <div class="order-menu">
            <t t-foreach="props.OrderMenu" t-as="order" t-key="order.id">
                <div class="order_menu_row">
                    <div class="category">
                        <t t-esc="order.categoryName"/>
                    </div>
                    <t t-foreach="order.products" t-as="product" t-key="product.id">
                        <div class="order_item">
                            <span class="product_name"><t t-esc="product.product_name + '(' + product.qty + ')'"/></span>
                            <span class="product_price"><t t-esc="(product.price).toFixed(2)"/></span>
                            <span class="product_qty">
                              <input type="number" value="1" id="input" class="input"  style="font-size: 14px;width: 60px;min-height: 9px;height: 25px;padding: -1px;" />

                              <script type="text/javascript">

                                  var id ="input_<t t-esc="product.product_id"/>";
                                  console.log(id);

                                  var x =document.getElementById("input");
                                  console.log(x);

                                  <!-- if(input) -->
                                    x.setAttribute("id", id);
                              </script>

                              <i class="fa fa-plus-square change_qty" t-on-click="trigger('click-change-qty', {'product': product,'categ':order})" aria-hidden="true" style="color: green;font-size: 25px;cursor: pointer" t-att-data-lot="product"></i>
                            </span>
                        </div>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
